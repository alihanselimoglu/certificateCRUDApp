
    <%- include("partials/_menu") %>

    <style>
      /* Stil modifikasyonları için CSS */
      .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
        }
        .modal-content {
            background-color: #fefefe;
            margin: 10% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 600px;
        }
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
    <div>
      <h3 style="padding-top: 10px; padding-bottom: 10px; background-color: rgb(255, 255, 255);">
        <%= certificate.name %>
      </h3>
      <p style="padding-top: 10px; padding-bottom: 10px">
        <%= certificate.description %>
      </p>

      <div>
        <img style="width: 16cm; height: 9cm;" src="<%= certificate.url %>" alt="<%= certificate.name %>">
      </div>
      
    </div>
    <div style="margin-top: 30px ; margin: auto;">
      <ul>
        
         <li> <a style="min-width: 26px;" class="certificates" href="/certificates/<%= certificate._id %>?_method=DELETE"
          onclick="return confirm('Do you want to delete the certificate')" >Delete</a></li>
      </ul>
   </div>


   <button id="updateModalNutton" style="text-align: center; margin-left: 723px; margin-top: 20px; background-color: aqua; height: 40px; width: 160px;" class="btn btn-primary" onclick="openModal()">Update</button>

   <!-- Modal -->
   <div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="certificateModalLabel" aria-hidden="true">
       <div class="modal-dialog" role="document">
           <div class="modal-content">
               <div class="modal-header">
                   <h5 class="modal-title" id="certificateModalLabel">Sertifika Bilgileri</h5>
                   <button type="button" class="close" onclick="closeModal()" data-dismiss="modal" aria-label="Close">
                       <span aria-hidden="true">&times;</span>
                   </button>
               </div>
               <div class="modal-body">
                   <form id="certificateForm" method="POST" action="/certificates/<%= certificate._id %>?_method=PUT" enctype="multipart/form-data">
                       <div class="form-group">
                           <label for="certificateName">Sertifika Adı:</label>
                           <input value="<%= certificate.name %>" type="text" name="name" class="form-control" id="name" required>
                       </div>
                       <div class="form-group">
                           <label for="certificateDescription">Sertifika Açıklaması:</label>
                           <textarea class="form-control" name="description" id="description" rows="1" required><%= certificate.description %></textarea>
                       </div>
                       <div>
                           <input type="file" name="image">
                       </div>
                       <button style="background-color: aquamarine;" type="submit" onclick="closeModal()" class="btn btn-primary">UPDATE</button>
                   </form>
               </div>
           </div>
       </div>
   </div>













   <script>
    // Modalı açma işlemi
    function openModal() {
        document.getElementById('updateModal').style.display = 'block';
    }

    // Modalı kapatma işlemi
    function closeModal() {
        document.getElementById('updateModal').style.display = 'none';
    }
    
</script>

  </body>
</html>
